<Window x:Class="TaskManagerApp.HomePage.ListInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New List" Height="250" Width="400"
        WindowStartupLocation="CenterOwner" 
        WindowStyle="SingleBorderWindow" 
        ResizeMode="CanResize"
        Loaded="Window_Loaded">
    <Grid Background="#F0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="367*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="20,20,20,20" Grid.ColumnSpan="2">

            <!-- Title -->
            <TextBlock Text="Add New List" FontFamily="Arial" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <!-- Label and TextBox for List Name -->
            <TextBlock Text="List Name:" FontSize="16" Margin="0,0,0,5" />
            <TextBox x:Name="ListNameTextBox" 
                       Margin="0,0,0,10" 
                       Height="30" 
                       Padding="5" 
                       FontSize="14"
                       BorderThickness="1"
                       BorderBrush="#D3D3D3"
                       Background="White"
                       Focusable="True" />

            <!-- Button to add the new list -->
            <Button Content="Add List" 
                    Click="AddListButton_Click" 
                    Margin="0,10,0,0" 
                    Height="35"
                    FontSize="16"
                    Background="#007ACC"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#007ACC"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="Margin" Value="0,10,0,0"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="Height" Value="35"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A99"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#003D66"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>