<Window x:Class="TaskManagerApp.TasksBenefits.EditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Task" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Task Name" FontWeight="Bold" />
            <TextBox x:Name="TaskNameTextBox" Margin="0,5,0,10" />

            <TextBlock Text="Description" FontWeight="Bold" />
            <TextBox x:Name="TaskDescriptionTextBox" Margin="0,5,0,10" TextWrapping="Wrap" AcceptsReturn="True" Height="60"/>

            <TextBlock Text="Due Date" FontWeight="Bold" />
            <DatePicker x:Name="TaskDueDatePicker" Margin="0,5,0,10" />

            <TextBlock Text="Priority" FontWeight="Bold" />
            <ComboBox x:Name="PriorityComboBox" Margin="0,5,0,10" />

            <TextBlock Text="Status" FontWeight="Bold" />
            <ComboBox x:Name="StatusComboBox" Margin="0,5,0,10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" Click="SaveButton_Click"  Margin="0,0,10,0" 
                        Width="100" Background="#FF2400"
                        Foreground="White" FontWeight="Bold" Padding="10,5" 
                        BorderBrush="Transparent" Cursor="Hand" />
                <Button Content="Cancel" Click="CancelButton_Click"  Margin="0,0,10,0" 
                        Width="100" Background="#27AE60" 
                        Foreground="White" FontWeight="Bold" Padding="10,5" 
                        BorderBrush="Transparent" Cursor="Hand" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>