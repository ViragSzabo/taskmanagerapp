<Window x:Class="TaskManagerApp.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Task List" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Task Name:" />
            <TextBox x:Name="TaskNameTextBox" />
            <Button Content="Add List" Click="AddTaskButton_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>