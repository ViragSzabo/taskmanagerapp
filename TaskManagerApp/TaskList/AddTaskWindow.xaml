<Window x:Class="TaskManagerApp.TaskList.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Task" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F9F9F9">

    <Grid Margin="20">
        <StackPanel>
            <GroupBox Header="Add New Task" Margin="0,0,0,20" Padding="10" Background="White">
                <StackPanel>
                    <TextBlock Text="Name:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="TaskNameTextBox" Width="350" Height="30" Margin="0,0,0,15"/>

                    <TextBlock Text="Description:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="TaskDescriptionTextBox" Width="350" Height="30" Margin="0,0,0,15"/>

                    <TextBlock Text="Priority:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <ComboBox x:Name="PriorityComboBox" Width="350" Height="30" Margin="0,0,0,15"/>

                    <TextBlock Text="Status:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <ComboBox x:Name="StatusComboBox" Width="350" Height="30" Margin="0,0,0,15"/>
                </StackPanel>
            </GroupBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Width="100" Click="SaveButton_Click" Margin="0,0,10,0" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
                <Button Content="Cancel" Width="100" Click="CancelButton_Click" Background="#F44336" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>